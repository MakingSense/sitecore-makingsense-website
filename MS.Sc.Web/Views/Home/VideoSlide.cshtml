@inherits MS.Sc.Infrastructure.Views.BaseView<MS.Sc.Models.IVideo_Slide>

<section class="parallax--bg-fixed">
    <div class="content--table-center" style="background-image:url('@(Model.Background_Image != null ? Model.Background_Image.Src : string.Empty)')">
        <video id="video" width="100%" height="100%" autoplay loop style="opacity: 1;">
            <source src="@(Model.Video != null ? Model.Video.Video_Url_Webm : string.Empty)" type="video/webm">
            <source src="@(Model.Video != null ? Model.Video.Video_Url_Mp4 : string.Empty)" type="video/mp4">
        </video>
        <div class="wrapper__overlay"></div>
        <div class="wrapper">
            <h1>@Editable(i => i.Title)</h1>
           @Editable(i => i.Description)
        </div>
        <a href="#our-work" role="button" class="arrow-go-down">
            @RenderImage(i => i.Arrow_Image)
        </a>
    </div>
</section>